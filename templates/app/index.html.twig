{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}


	<div class="container text-center">
		<div class="col-md-12 ">
			<h1>Bienvenidos aqui puede cargar los archivos de tematicas y conferencias</h1>
		</div>
		<div class="col-md-12">
			<form class="card card-signin" action="{{ path('subir') }}" method="post" enctype="multipart/form-data">
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="inputAddress4" style="color:#da5207">Subir Archivo Tematicas</label>
						<input class="form-control" id="ayudar" name="tematica" type="file" required>
					</div>
					<div class="text-center col-md-12">
						<button type="submit" class="btn btn-primary">Enviar</button>
					</div>
				</div>
			</form>
			<form class="card card-signin" action="{{ path('subir') }}" method="post" enctype="multipart/form-data">
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="inputAddress4" style="color:#da5207">Subir Archivo Conferencias</label>
						<input class="form-control" id="ayudar" name="conferencia" type="file" required>
					</div>
					<div class="text-center col-md-12">
						<button type="submit" class="btn btn-primary">Enviar</button>
					</div>
				</div>
			</form>
		</div>
		<div class="col-md-12  mt-3">
			<a class="btn btn-primary" href="{{ path('tematicas_index')}}">Listado Tematicas y Jornadas</a>
			<a class="btn btn-primary" href="{{ path('conferencias_index')}}">Listado Conferencias</a>
		</div>
	</div>
{% endblock %}
