<form method="post" action="{{ path('tematicas_delete', {'id': tematica.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tematica.id) }}">
    <button class="btn">Delete</button>
</form>
